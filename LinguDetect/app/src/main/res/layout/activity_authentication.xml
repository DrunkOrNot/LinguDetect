<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AuthenticationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnAuthAnonymously"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log In Anonymously"
            tools:text="Log In Anonymously" />

        <Button
        android:id="@+id/btnAuthWithGoogle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In With Google"
        tools:text="Log In With Google" />

        <Button
            android:id="@+id/btnLogoutWithGoogle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out With Google"
            tools:text="Log Out With Google" />

        <TextView
            android:id="@+id/txtStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TextView" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>